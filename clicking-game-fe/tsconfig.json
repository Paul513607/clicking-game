{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "public/js",
        "rootDir": "src/ts",
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "exclude": [
        "node_modules",
    ],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority",
        "synchronousWatchDirectory": true,
        "excludeDirectories": [
            "**/node_modules",
        ],
        "excludeFiles": []
    }
}